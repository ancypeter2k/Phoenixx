<script>
  // Get references to the mobile elements
  const mobileMenuToggle = document.getElementById('menu-toggle');
  const mobileNav = document.getElementById('mobile-nav');
  const mobileCategoryBtn = document.getElementById('mobile-category-btn');
  const mobileCategoryDropdown = document.getElementById('mobile-category-dropdown');
  const mobileSearchBtn = document.getElementById('mobile-search-btn');
  const mobileSearchDropdown = document.getElementById('mobile-search-dropdown');
  const mobileUserBtn = document.getElementById('mobile-user-btn');
  const mobileUserDropdown = document.getElementById('mobile-user-dropdown');

  // Toggle mobile navigation menu visibility
  mobileMenuToggle?.addEventListener('click', function() {
    mobileNav.classList.toggle('hidden');
  });

  // Toggle mobile category dropdown visibility
  mobileCategoryBtn?.addEventListener('click', function(e) {
    e.stopPropagation(); // Prevent event propagation to close the menu
    mobileCategoryDropdown.classList.toggle('hidden');
  });

  // Toggle mobile search dropdown visibility
  mobileSearchBtn?.addEventListener('click', function(e) {
    e.stopPropagation(); // Prevent event propagation to close the menu
    mobileSearchDropdown.classList.toggle('hidden');
  });

  // Toggle mobile user dropdown visibility
  mobileUserBtn?.addEventListener('click', function(e) {
    e.stopPropagation(); // Prevent event propagation to close the menu
    mobileUserDropdown.classList.toggle('hidden');
  });

  // Close mobile navigation and dropdowns when clicking outside
  window.addEventListener('click', function(event) {
    // Close mobile menu if clicked outside
    if (!event.target.closest('#mobile-nav') && !event.target.closest('#menu-toggle')) {
      mobileNav.classList.add('hidden');
    }

    // Close mobile category dropdown if clicked outside
    if (!event.target.closest('#mobile-category-btn') && !event.target.closest('#mobile-category-dropdown')) {
      mobileCategoryDropdown.classList.add('hidden');
    }

    // Close mobile search dropdown if clicked outside
    if (!event.target.closest('#mobile-search-btn') && !event.target.closest('#mobile-search-dropdown')) {
      mobileSearchDropdown.classList.add('hidden');
    }

    // Close mobile user dropdown if clicked outside
    if (!event.target.closest('#mobile-user-btn') && !event.target.closest('#mobile-user-dropdown')) {
      mobileUserDropdown.classList.add('hidden');
    }
  });
</script>
