<body class="bg-gradient-to-b from-red-50 to-red-100 min-h-screen flex items-center justify-center p-4">
    <div class="max-w-4xl w-full">
        <div class="grid md:grid-cols-2 gap-8 items-center">
            <!-- Left Side - Illustration -->
            <div class="order-2 md:order-1">
                <svg class="w-full max-w-md mx-auto" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                    <!-- Robot Body -->
                    <rect x="60" y="60" width="80" height="100" rx="10" fill="#EF4444"/>
                    <rect x="70" y="80" width="60" height="60" rx="5" fill="#F87171"/>
                    
                    <!-- Robot Head -->
                    <rect x="75" y="30" width="50" height="40" rx="5" fill="#DC2626"/>
                    <circle cx="90" cy="45" r="5" fill="#FCD34D"/>
                    <circle cx="110" cy="45" r="5" fill="#FCD34D"/>
                    
                    <!-- Sparking/Broken Elements -->
                    <line x1="60" y1="90" x2="80" y2="110" stroke="#FECACA" stroke-width="3"/>
                    <line x1="140" y1="90" x2="120" y2="110" stroke="#FECACA" stroke-width="3"/>
                    
                    <!-- Broken Circuit Indicators -->
                    <path d="M85,135 Q100,150 115,135" fill="none" stroke="#FECACA" stroke-width="3"/>
                    
                    <!-- Error Signs -->
                    <text x="65" y="115" font-family="Arial" font-size="24" fill="white">500</text>
                </svg>
            </div>
            
            <!-- Right Side - Content -->
            <div class="order-1 md:order-2 text-center md:text-left">
                <h1 class="text-6xl md:text-7xl font-bold text-red-600 mb-4">Error</h1>
                <h2 class="text-3xl md:text-4xl font-semibold text-gray-400 mb-6">
                    Internal Server Problem
                </h2>
                <p class="text-lg text-gray-600 mb-8">
                    Something went wrong on our end. Our tech team has been notified and is working to resolve the issue.
                </p>
                <div class="flex flex-col md:flex-row gap-4">
                    <a href="/" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-300 text-lg font-semibold">
                        Return Home
                    </a>
                    <button onclick="history.back()" class="inline-block px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-300 text-lg font-semibold">
                        Go Back
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Additional Information -->
        <div class="mt-12 text-center text-gray-600">
            <p>
                Experiencing persistent issues? 
                <a href="/#contact" class="text-red-600 hover:underline">Contact Support</a>
            </p>
        </div>
    </div>
</body>
